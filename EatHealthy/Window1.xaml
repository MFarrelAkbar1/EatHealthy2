<Window x:Class="EatHealthyWPF.KalkulatorKesehatan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalkulator Kesehatan" Height="350" Width="525">
    <Grid>
        <!-- StackPanel untuk menampung elemen-elemen UI -->
        <StackPanel Margin="10">

            <!-- Judul Kalkulator Kesehatan -->
            <TextBlock Text="Kalkulator Kesehatan" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- StackPanel untuk input Berat Badan -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Berat Badan (kg):" VerticalAlignment="Center" />
                <!-- TextBox untuk input Berat Badan -->
                <TextBox x:Name="BeratBadanTextBox" Width="100" Margin="10,0,0,0" />
            </StackPanel>

            <!-- StackPanel untuk input Tinggi Badan -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Tinggi Badan (cm):" VerticalAlignment="Center" />
                <!-- TextBox untuk input Tinggi Badan -->
                <TextBox x:Name="TinggiBadanTextBox" Width="100" Margin="10,0,0,0" />
            </StackPanel>

            <!-- Tombol Hitung -->
            <Button Content="Hitung" Width="100" Height="30" Click="HitungButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
